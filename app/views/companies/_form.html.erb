  <%= form_for @company do |f| %>
  
   <%= render "shared/error_messages",object: @company %>
   
    <div class="form-group">
      <%= f.label :"企業名", class: 'text-white' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'text-white' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :"部署", class: 'text-white' %>
      <%= f.text_field :department, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :"担当者", class: 'text-white' %>
      <%= f.text_field :person_in_charge, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'text-white' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'text-white' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>          
    
    <%= f.submit yield(:button_text), class: 'btn-block btn-white' %>
  <% end %>
  <%= link_to 'ログインはこちら', login_path,class: 'text-white' %>